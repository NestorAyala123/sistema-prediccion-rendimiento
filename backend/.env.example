# Configuración de Base de Datos SQLite (TypeORM)
DATABASE_PATH=database/academic_prediction.db

# Configuración de MongoDB
MONGODB_URI=mongodb://localhost:27017/academic_prediction
# Para MongoDB Atlas (producción):
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/academic_prediction?retryWrites=true&w=majority

# Configuración de JWT
JWT_SECRET=tu_secreto_jwt_aqui_cambiar_en_produccion
JWT_EXPIRATION=24h

# Configuración del servidor
PORT=3001
NODE_ENV=development

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logging
LOG_LEVEL=debug

# URL del microservicio de predicción IA (FastAPI)
PREDICTOR_API_URL=http://localhost:8000
# Para Docker: PREDICTOR_API_URL=http://predictor:8000
